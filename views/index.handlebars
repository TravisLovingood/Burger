     {{!-- * Setup the `index.handlebars` to have the 
     template that Handlebars can render onto. --}}

<h1>Eat-Da-Burgers!</h1>
     {{!-- add image --}}
<div>
  <img src="/assets/img/burger.png" alt="burger" width="200px" height="200px" class="z-depth-3"></img>
</div>

<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers to Devour!</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

{{!-- * Create a button in `index.handlebars` that will 
submit the user input into the database. --}}

<h2>Add Burgers?</h2>
<form class="create-form">

  <div class="form-group">
    <label for="newBurger">Burger Name:</label>
    <input type="text" id="newBurger" name="name">
  </div>


  <div class="form-group">
    <label for="devour">Devour?</label><br>
    <input type="radio" name="devour" value="1" checked> Devour!<br>
    <input type="radio" name="devour" value="0"> Don't Devour...
  </div>
  </div>

  <button type="submit">Submit</button>
</form>